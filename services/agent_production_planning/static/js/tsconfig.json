{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2020",
    "lib": ["dom", "es2019", "es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
